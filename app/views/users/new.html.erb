<h1>Create Account</h1>

<%= form_for User.new, url: '/new_user' do |f| %>
	<%= f.label :user_name %>
	<%= f.text_field :user_name %>
	<br>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<br>
	<%= f.label :bio %>
	<%= f.text_area :bio %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br>
	<%= f.submit "Create Account" %>
<% end %>